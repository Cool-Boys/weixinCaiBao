.container {
  background-color: #9df88f;
  color: #000;
  padding: 10rpx;
}

.flex-wrp {
  margin-top: 0rpx;
  display: flex;
 
}

.flex-wrp-tips {
  margin-top: 0rpx;
  padding-left: 20rpx;
  /*浮动向左*/
}

.flex-item {
  margin: auto 0rpx;
  font-size: 26rpx;
  padding: 0rpx;
}

.flex-item-text {
  margin-left: 20rpx;
  width: 100%;
}

.flex-item-text>input {
  border: 1rpx solid #d2d2d2;
  padding: 0px;
  
  font-size: 22rpx;
}

.flex-item-image {
  margin-left: 20rpx;
  width: 120rpx;
  height: 120rpx;
}

.btn {
  clear: both;
}
